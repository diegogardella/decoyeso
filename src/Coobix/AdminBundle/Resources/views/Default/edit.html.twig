{% endblock javascripts %}


{% block main_content %}




<div class="module width_full">
	
	{% block module_header%}
		<div class="module_header">
		
			{% block module_header_contenido%}
			
				<div class="module_tit txt3">{% block module_tit %}TITLE LIST{% endblock module_tit %}</div>
				
				{% block menuAcciones%}

					{% block module_header_delete%}
					<form action="{% block delete_path %}{{ path('admin_entity_delete', { 'id': entity.id }) }}{% endblock delete_path %}" method="post">
					{{ form_widget(delete_form) }}
					<button id="pedidoEliminarBtn" class="btn_red_button right" type="submit">Eliminar</button>
					</form>
					{% endblock module_header_delete%}
			
			
					{% block module_header_otros%}
					
					{% endblock module_header_otros%}

				{% endblock menuAcciones%}
				
				{% block menuOpciones%}
					<div id="idmenuMasOpciones" class="menuMasOpciones menusDropDownSeccion">
						<a id="idBtnMasOpciones" class="btn_blue right" href="javascript:void(0)">MÃ¡s Opciones</a>
						<ul id="idUlMasOpciones" style="display:none" >
							{% block menuOpcionesItems %}
							{% endblock menuOpcionesItems %}
						</ul>
					</div>
				{% endblock menuOpciones%}
			
				{% block opcionesGuia  %}
				{% endblock opcionesGuia  %}
			
			
			{% endblock module_header_contenido %}
		</div>
	{% endblock module_header%}	
	
	<hr>
	
	
	{% block module_content_antes%}{% endblock module_content_antes%}
	
	<div class="module_content">
	
	{%block msj_info%}
		
		
		{% if app.session.hasFlash('msj_info') %}
			<div id="msjInfo" class="msjInfo" >
				{{ app.session.getFlash('msj_info') }}
			</div>
		{% endif %}
	
	{%endblock msj_info%}
		
	{% block form_content %}
		<form action="{% block update_path %}{{ path('admin_entity_update') }}{% endblock update_path %}" method="post" {{ form_enctype(edit_form) }}>
		{% form_theme edit_form 'CoobixAdminBundle:Form:Fields.html.twig' %}
		{{ form_widget(edit_form) }}
			<p>
				<button id="btnGuardarCambios" class="btn_green_button right" type="submit">Guardar cambios</button>
			</p>
		</form>
		
		
		
		{% block form_record_actions %}
		
		{% endblock form_record_actions %}
		<div class="fix"></div>
		{% endblock form_content %}
		
		{% block otros %}{% endblock otros %}
		
	</div>
</div>



		


{% endblock main_content %}
