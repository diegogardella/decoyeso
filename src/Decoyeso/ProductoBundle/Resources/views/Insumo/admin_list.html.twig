{% extends "CoobixAdminBundle:Default:list.html.twig" %}

{% block module_tit %}
Listado de Insumos
{% endblock module_tit %}


{% block list_tits %}

{% set widthCols =  94/4  %}

<th style="width: {{ widthCols+20 }}%"{% if entities.isSorted('i.nombre') %} class="sorted" {% endif %}>{{ entities.sortable('Nombre', 'i.nombre')|raw }}</th>
<th align="center" style="width: {{ widthCols-6 }}%"{% if entities.isSorted('i.unidad') %} class="sorted" {% endif %}>{{ entities.sortable('Unidad', 'i.unidad')|raw }}</th>
<th align="center" style="width: {{ widthCols-6 }}%"{% if entities.isSorted('i.precio') %} class="sorted" {% endif %}>{{ entities.sortable('Precio', 'i.precio')|raw }}</th>

{% endblock list_tits %}

{% block list_item_texts %}

<td ><a href="{{ path('insumo_edit', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>
<td align="center"><a href="{{ path('insumo_edit', { 'id': entity.id }) }}">{{ entity.unidad }}</a></td>
<td align="center"><a href="{{ path('insumo_edit', { 'id': entity.id }) }}">{{ entity.precio }} $</a></td>

{% endblock list_item_texts %}

