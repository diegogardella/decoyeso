{% block module_header%}
		<div class="module_header">
			<div id="tituloContenido" class="module_tit txt3">Datos del Proceso</div>
			
			

			<a id="pedidoListarBtn" class="btn_blue right" href="{{path('proceso')}}">Ir al listado</a>
		
		</div>
{% endblock module_header%}

{% block form_content %}
		{% block errorMsj %}{% endblock errorMsj %}
		
		<form action="{% block create_path %}{{ path('proceso_finalizar_update', { 'id': entity.id }) }}{% endblock create_path %}" method="post" id="procesoFinalizarForm" {{ form_enctype(edit_form) }}>
		<div class="formProcesoCont">
		<br>
		<br>	
	
		{% form_theme edit_form 'CoobixAdminBundle:Form:Fields.html.twig' %}
		{{ form_errors(edit_form) }}
		

		
		<div class="fix"><br><br><br></div>
				
		<table id="tablaItems" class="NTablaItemsProceso">
			<tr>	
				<td class="txt3">PRODUCTO</td>
				<td align="center" class="txt3">A FABRICAR</td>
				<td align="center" class="txt3">FABRICADOS</td>
			</tr>
			
			{% for pp in procesoProducto %} 
			<tr class="NItemsTr" id="NItemsTr">
			
				<td class="">{{ pp.producto.nombre }}</td>
				
				<td align="center" class="">{{ pp.cantidad }}</td>
				
				<td align="center" class="">
					<input type="text" name="cantidadProducida_{{ pp.producto.id }}" id="cantidadProducida_{{ pp.producto.id }}" class="inputCorto inputCantidadProducida" value="{{ pp.cantidad }}">
				</td>
			</tr>
			
			{% endfor %}		
		</table>
		
		
	
		<input type="hidden" name="numFilas" id="numFilas" value="0">
		
		<div class="fix"></div>
	<br/>
	<div class="fix"></div>
	
		
	{{ form_row(edit_form._token) }}
	</div>	
		
		<div class="fix"></div>
		<p>
			<button class="btn_green_button right" type="submit">LISTO</button>
		</p>
		
		<div class="fix"></div>
		
		</form>
		{% endblock form_content %}

{% block list_path %}{{ path('proceso') }}{% endblock list_path %}

