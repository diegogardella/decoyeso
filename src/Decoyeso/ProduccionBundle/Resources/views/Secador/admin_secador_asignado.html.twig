{% extends "CoobixAdminBundle:Default:index.html.twig" %}


{% block main_content %}
<div class="module width_full">

	<div class="module_header">
	
		<div class="module_tit txt3">Estado</div>

		

		
		<div class="fix"></div>
		
	   
		
	</div>
	
		
		<a class="NTabContainerBtn txt3 border_radius" id="btnEstadoSecadorPlacas" href="javascript:void(0);">
			Secadores de Placas
		</a>
		<a class="NTabContainerBtn txt3 border_radius"  id="btnEstadoSecadorMolduras" href="javascript:void(0);">
			Secadores de Molduras
		</a>
		

		
		
		
	<div class="NTabContainer border_radius" id="solapaEstadoPlacas">
		<div class="NTabContainerBtn " >
		

		
			<a href="{{ path('secador_estado') }}?filtro=0&tipo=0" 
			class="
			{% if (filtro == 0) %}txt3{% else %} Ntxt3 {% endif %} 
			">Capacidad</a> 
			| 
			<a href="{{ path('secador_estado') }}?filtro=1&tipo=0" class="
			{% if (filtro == 1) %}txt3{% else %} Ntxt3 {% endif %} 
			">Tiempo de Secado</a>  
			| 
			<a href="{{ path('secador_estado') }}?filtro=2&tipo=0" class="
			{% if (filtro == 2) %}txt3{% else %} Ntxt3 {% endif %} 
			">Proceso</a> 
			
		</div>
		
		
		<div class="fix"><br></div>
		
		{% for sP in secadoresPlacas %}
			{% if (filtro ==0) %}
				{% include 'DecoyesoProduccionBundle:Secador:secador_placas.html.twig' with {'sP': sP} %}
			{% endif %}
			{% if (filtro ==1) %}
				{% include 'DecoyesoProduccionBundle:Secador:secador_placas_tiempo.html.twig' with {'sP': sP} %}
			{% endif %}
			
			{% if (filtro ==2) %}
				
			{% endif %}
		{% else %}
		
		<div class="txt3">
			No se han creado secadores de placas.
		</div>
		
		{% endfor %}
		
		
		
					
	</div>
	
	
	<div class="NTabContainer border_radius NdisplayNone" id="solapaEstadoMolduras">
	
	<div class="fix"><br></div>
		
		{% for sP in secadoresMolduras %}
		
			{% if (filtro ==0) %}
				{% include 'DecoyesoProduccionBundle:Secador:secador_molduras.html.twig' with {'sP': sP} %}
			{% endif %}
			{% if (filtro ==1) %}
				{% include 'DecoyesoProduccionBundle:Secador:secador_molduras_tiempo.html.twig' with {'sP': sP} %}
			{% endif %}
			
			{% if (filtro ==2) %}
		
			{% endif %}
		
		
		
		{% else %}
		
		<div class="txt3">
			No se han creado secadores de molduras.
		</div>
		
		{% endfor %}
		

	</div>			
</div>
{% endblock main_content %}

{% block javascript_extra %}



	<script type="text/javascript" src="{{ asset('bundles/decoyesoproduccion/js/secador.js') }}" ></script>
	
{% endblock javascript_extra %}

