{% extends "CoobixAdminBundle:Default:new.html.twig" %}

{%block main_path%}
	
	{%if entity.cliente %}
		<ul>
			<li><a class="btn_back_to_list txt16 txt_green" href="{{ path('cliente_edit',{'id': entity.cliente.id}) }}">Cliente: {{entity.cliente.nombre}}</a></li>
			<li>> <a class="btn_back_to_list txt16 txt_green" href="{{ path('pedido_new',{'cliente': entity.cliente.id}) }}">Crear Pedido</a></li>
		</ul>
	{%endif%}
	
{%endblock main_path%}

{% block module_tit %}
	Crear Pedido
{% endblock module_tit %}

{% block menuOpciones %}
	{%if entity.cliente %}
		<div class="menuAcciones menusDropDownSeccion" id="idmenuAcciones">
			<a href="javascript:void(0)" class="btn_blue right" style="background-color: rgb(48, 109, 137);">Opciones</a>
			<ul style="display: none;">
			
				<li><a href="{{path('pedidos_por_cliente',{'cliente':entity.cliente.id})}}">Listar Pedidos del Cliente</a></li>
				<li class="separador"></li>
				<li><a href="{{path('cliente_edit',{'id':entity.cliente.id})}}">Editar Cliente</a></li>
			
			</ul>
		</div>
			
	{% endif %}
{% endblock menuOpciones %}
	
{% block menuAcciones%}
{% endblock menuAcciones%}



{% block create_path %}
{{ path('pedido_create') }}
{% endblock create_path %}

{% block list_path %}
{{ path('pedido') }}
{% endblock list_path %}

{% block javascript_extra %}

<script type="text/javascript">
	var urlDepartamento="{{url('ubicacion_cargar_departamento')}}";
	var urlLocalidad="{{url('ubicacion_cargar_localidad')}}";
</script>

<script type="text/javascript" src="{{ asset('bundles/pedido/js/pedido.js') }}" /></script>
{% endblock javascript_extra %}
