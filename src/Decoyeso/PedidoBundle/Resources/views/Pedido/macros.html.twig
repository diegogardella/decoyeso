{% macro guia(pedido) %}

	{% if (pedido.estado <3 ) %}
		<a  href="{{path('presupuesto_new',{'pedido':pedido.id})}}" class="btn_blue right">Crear Presupuesto al pedido</a>
		{% if (pedido.requiereRelevamiento and pedido.estado<2) %}
			<a href="{{path('relevamiento_new',{'pedido':pedido.id})}}" class="btn_blue right">Crear Relevamiento al Pedido</a>
		{% endif %}
	{% endif %}
	
	{% if (pedido.estado == 3 ) %}
		<a  href="{{ path('presupuesto_por_pedido',{'pedido': pedido.id}) }}" class="btn_blue right">Listar Presupuestos Candidatos a Ser Aprobados</a>
	{% endif %}
	
	{% if (pedido.estado == 4 ) and is_granted('ROLE_SUPER_ADMIN') %}
		<a  href="{{path('solicitudmovimiento_new',{'paramPedido':pedido.id})}}" class="btn_blue right">Crear Solicitud a Stock</a>
	{% endif %}
		

{% endmacro %}