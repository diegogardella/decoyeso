{% extends "CoobixAdminBundle:Default:edit.html.twig" %}
{% import "PedidoBundle:Pedido:macros.html.twig" as macrosPedido %}

{%block main_path%}
	<ul>
		<li><a class="btn_back_to_list txt16 txt_green" href="{{ path('cliente_edit',{'id':entity.pedido.cliente.id}) }}">Cliente: {{entity.pedido.cliente}}</a></li>
		<li> > <a class="btn_back_to_list txt16 txt_green" href="{{ path('pedido_edit',{'id':entity.pedido.id}) }}">Pedido: {{entity.pedido.numero}}, {{entity.pedido.nombre}}</a></li>
		<li> > <a class="btn_back_to_list txt16 txt_green" href="{{ path('relevamiento_edit',{'id':entity.id}) }}">Relevamiento: {{entity.numero}}</a></li>
		<li> > <a class="btn_back_to_list txt16 txt_green" href="{{ path('relevamiento_edit',{'id':entity.id}) }}">Editar Relevamiento</a></li>
	</ul>
{%endblock main_path%}

{% block module_tit %}
	Editar Relevamiento
{% endblock module_tit %}

{% block menuOpcionesItems %}
	{{ macrosPedido.menuOpciones(entity.pedido) }}		
{% endblock menuOpcionesItems %}
	
{% block menuAccionesItems%}
<li>
	<form action="{{ path('relevamiento_delete', { 'id': entity.id }) }}" method="post">
		{{ form_widget(delete_form) }}
		<button type="submit">Eliminar</button>
	</form>
</li>
{% endblock menuAccionesItems%}

{%block opcionesGuia  %}
	{{ macrosPedido.guia(entity.pedido) }}
{%endblock opcionesGuia  %}

{% block form_content %}
		<form action="{% block update_path %}{{ path('relevamiento_update', { 'id': entity.id }) }}{% endblock update_path %}" method="post" {{ form_enctype(edit_form) }}>
		{% form_theme edit_form 'CoobixAdminBundle:Form:Fields.html.twig' %}
		
		<div id="div_relevamiento_numero" class="form_row">
			<label for="relevamiento_numero" class=" required">NÃºmero</label>
			<div>{{entity.numero}}</div>
		</div>
			
			<div style="display:none">{{ form_widget(edit_form.pedido) }}</div>
			<div class="form_row" id="div_relevamiento_nombre">
				<label class=" required" for="relevamiento_nombre">Pedido</label>
				<div class="field_widget">{{ entity.pedido }}</div>
			</div>
			
			{{ form_rest(edit_form) }}
			<p>
				<button class="btn_green_button right" type="submit">Guardar cambios</button>
			</p>
		</form>
		
		
		
		{% block form_record_actions %}
		
			{% block delete_btn %}
			
			{% endblock delete_btn %}
		
		{% endblock form_record_actions %}
		<div class="fix"></div>
{% endblock form_content %}

