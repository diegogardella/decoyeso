	.cantidadDetalle thead{
		font-size:12px;
	}

	.cantidadDetalle tr td,.cantidadDetalle tr th{
		border: 1px solid #444;
	}
	
	.cantidadDetalle thead tr th:first-child{
		width: 100px;
		padding:3px;
		
	}
	
	.cantidadDetalle tbody tr td{
