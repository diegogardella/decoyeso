{% extends "CoobixAdminBundle:Default:new.html.twig" %}


{% block breadcrumb_in %}

	<div class="breadcrumbs">
		<a href="{{ path('solicitudmovimiento') }}" class="current" >Agregar Producto</a>
	</div>
	<div class="breadcrumb_divider"> 
		<a href="{{ path('solicitudmovimiento_new') }}" class="current" >Agregar</a>
	</div>
	
{% endblock breadcrumb_in %} 

{% block module_tit %}
Crear solicitud
{% endblock module_tit %}


{% block list_path %}
	{{ path('solicitudmovimiento') }}
{% endblock list_path %}

{% block form_content %}
	{% block errorMsj %}{% endblock errorMsj %}
	<form novalidate action="{% block create_path %}{{ path('solicitudmovimiento_create') }}{% endblock create_path %}" method="post" {{ form_enctype(form) }}>
		{% form_theme form 'CoobixAdminBundle:Form:Fields.html.twig' %}
		
		{{ form_row(form.pedido) }}
		{{ form_row(form.fechaHoraRequerido) }}
		{{ form_row(form.observacion) }}
		
				
		<div  class="form_row">
			
				<label class=" required" >Productos/Insumos</label>
				<div class="field_widget">
				
					<table  class="field_widget_elementos" id="tableListElementos">
						<tr>
							<th>Nombre</th>
							<th>Cantidad</th>
						</tr>
						{% set i = 0 %}
						{% for item in presupuestoItems %}
							<tr>
								<td>{{ item.designacion }}</td>
								<td>{{ item.cantidad }} {{ item.unidad }}</td>
							</tr>
							
							
						{% set i = i + 1 %}
	 					{% endfor %}	
						
					</table>
					
				</div>
				
				
				<input type="hidden" name="solicitudmovimiento[elementos]" id="solicitudmovimiento_elementos" value="{{ valorItems }}">
				
				{{ form_rest(form) }}
				
			</div>
			
		<p>
			<button class="btn_green_button right" id="btnGuardarCambios" type="submit">Guardar cambios</button>
		</p>
	</form>
		
		
	<div class="fix"></div>
{% endblock form_content %}

