{% block list_content %}

<table class="records_list">
				<thead>
		<tr>
			{% block list_tits %}
			{% set widthCols =  94/3  %}
			<th style="width: 47%"{% if entities.isSorted('l.log') %} class="sorted" {% endif %}>{{ entities.sortable('Acci√≥n', 'l.log')|raw }}</th>
			<th style="width: 23%"{% if entities.isSorted('u.apellido') %} class="sorted" {% endif %}>{{ entities.sortable('Usuario', 'u.apellido')|raw }}</th>
			<th style="width: 24%"{% if entities.isSorted('l.fechaHoraCreado') %} class="sorted" {% endif %}>{{ entities.sortable('Creado el', 'l.fechaHoraCreado')|raw }}</th>
			{% endblock list_tits %}
			<th   style="width: 6%" >&nbsp;</th>
		</tr>
	</thead>
	<tbody>
	{% set fecha = 0 %}
	{% for entity in entities %}
		{% if (entity.getFechaCreado()| date ('d/m/Y') != fecha) %}
		{% set fecha = entity.getFechaCreado()| date ('d/m/Y') %}

		<tr class="trColor1">
			<td colspan="4" style="text-align: center;">
				<span  class="NfechaLog">
				{{ entity.getFechaCreado | date ('d/m/Y')}}
				</span>
			</td>
		</tr>
		{% endif %}
	
	
		{% if is_granted(entity.getPermisos()) %}
		
		
		
		{% if (entity.getPrioridad() == 0) %}
			{% set classTr = "trColor1" %}
		{% endif %}
		{% if (entity.getPrioridad() == 1) %}
			{% set classTr = "NColor3" %} 
		{% endif %}
		{% if (entity.getPrioridad() == 2) %}
			{% set classTr = "Ncolor5" %}
		{% endif %}
		{% if (entity.getPrioridad() == 3) %}
			{% set classTr = "NColor4" %}
		{% endif %}
		
		<tr class="{{ classTr }}">
			{% block list_item_texts %}
			<td >{{ entity.getLog }}</td>
			<td >{{ entity.getUsuario }}</td>
			
			<td >{{ entity.getFechaHoraCreado | date ('d/m/Y H:i:s')}}</td>
			{% endblock list_item_texts %}	
			{% block list_buttons %}
			<td class="" >
				<ul>
				<li></li>
				<li>
				{% block list_delete %}
				{#	{% render "ClientesBundle:Cliente:listDeleteform" with {'id': entity.id}  %}	#}
				{% endblock list_delete %}
				</li>
				</ul>
			</td>
			{% endblock list_buttons %}
		</tr>
		{% endif %}	
	{% else %}
		<tr class="trColor1">
			<td colspan="0">
				<span class="txt16">No existen registros.</span>
			</td>
		</tr>
	{% endfor %}
	</tbody>
</table>

{% endblock list_content %}












