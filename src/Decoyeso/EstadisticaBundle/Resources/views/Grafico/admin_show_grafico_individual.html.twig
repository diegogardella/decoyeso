{% extends "DecoyesoEstadisticaBundle:Grafico:admin_index.html.twig" %}

{% block module_form_estadisticas %}
		<form action="{% block formUrl %}{% endblock formUrl %}" class="NformGraficos" method="get">
			{% block form_estadisticas_cont %}
			
			<div class="">
				<div class="module_tit txt3">Desde: <input readonly="readonly" type="text" name="fechaDesde" id="fechaDesde" value="{{ request["fechaDesde"]|date("d-m-Y") }}" class="NfechasGraficos" /> </div>
				<div class="module_tit txt3">Hasta: <input readonly="readonly" type="text" name="fechaaHasta" id="fechaaHasta" value="{{ request["fechaHasta"]|date("d-m-Y") }}" class="NfechasGraficos"/></div>
				
				
				{% if (grafico['grafico'].getId() == 10) %}
				<div class="module_tit txt3">
					Intervalo: 
					<select name="intervalo">
						<option  
						{% if request["intervalo"] == 1 %}selected="selected"{% endif %} 
						value="1">Diario</option>
						<option
						{% if request["intervalo"] == 7 %}selected="selected"{% endif %}  
						 value="7">Semanal</option>
						<option
						{% if request["intervalo"] == 30 %}selected="selected"{% endif %} 
						 value="30">Mensual</option>
						<option
						{% if request["intervalo"] == 365 %}selected="selected"{% endif %} 
						 value="365">Anual</option>
						
					</select> 
				</div>
				{% endif %}
				
				{# LISTADO DE PLACAS #}
				{% if (grafico['grafico'].getId() == 11) %}
				<select name="productos[]" multiple="true"  >
					{% for producto in productos %}
						{% if (producto.tipo) == 0 %}
					<option value="{{ producto.id }}">
						{{ producto.nombre }}
					</option>
						{% endif %}
					{% endfor %}
				</select>
				{% endif %}
				{# LISTADO DE PLACAS #}
				
				{# LISTADO DE PLACAS #}
				{% if (grafico['grafico'].getId() == 12) %}
				<select name="productos[]" multiple="true"  >
					{% for producto in productos %}
						{% if (producto.tipo) == 0 %}
					<option value="{{ producto.id }}">
						{{ producto.nombre }}
					</option>
						{% endif %}
					{% endfor %}
				</select>
				{% endif %}
				{# LISTADO DE PLACAS #}
				
				
				{# CHECK COSTO INDIVUDUAL Y TOTAL #}
				{% if (grafico['grafico'].getId() == 12 or grafico['grafico'].getId() == 11 ) %}
					<div class="fix"></div>
					<div class="module_tit txt3">Costo Indiv: 
					<input 
					{% if(request["costoIndividual"]) %} 
					checked="checked"
					{% endif %}
					type="checkbox"  name="costoIndividual">  
					
					</div>
					<div class="module_tit txt3">Costo Total: <input type="checkbox"
					{% if(request["costoTotal"]) %} 
					checked="checked"
					{% endif %}
					 name="costoTotal">  </div>
				{% endif %}
				{# CHECK COSTO INDIVUDUAL Y TOTAL #}
				 
				 
				 
				{# CHECK INSUMOS 
				{% if (grafico['grafico'].getId() == 10)  %}
					<div class="module_tit txt3">Insumos: 
					<input 
					{% if(request["insumos"]) %} 
					checked="checked"
					{% endif %}
					type="checkbox"  name="insumos">  
					</div>
				{% endif %}#}
				{# CHECK INSUMOS #}
				
				{# CHECK INSUMOS #}
				{% if (grafico['grafico'].getId() == 30)  %}
					<div class="module_tit txt3">Ganancia estimada: 
					<input 
					{% if(request["ganancia"]) %} 
					checked="checked"
					{% endif %}
					type="checkbox"  name="ganancia">  
					</div>
				{% endif %}
				{# CHECK INSUMOS #}
				
				
				
				
				
			</div>
			
			{% endblock form_estadisticas_cont %}
			<button class="btn_green_button right" type="submit">Actualizar</button>
			<a href="{{ path('grafico_show', { 'grafico': grafico['grafico'].getId() }) }}" class="btn_green_button right">Limpiar</a>
			
			<div class="fix"></div>
		</form>
{% endblock module_form_estadisticas %}

{% block module_content_estadisticas%}
		
	
	
	
	<div class="NcontChart" style="">
	{% include 'DecoyesoEstadisticaBundle:Grafico:grafico.html.twig' with {'grafico': grafico} %} 
	</div>
		
		         
	
			

{% endblock module_content_estadisticas%}